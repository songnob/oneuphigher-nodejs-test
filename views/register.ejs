<section class="container login-form">
    <section>
        <form id="frmLogin" action="/register" method="post" role="login">
            <img src="/images/logo.png" alt="" class="img-responsive" width="134pt" height="68pt"/>

            <div class="form-group">
                <input type="text" name="name" id="name" required class="form-control" placeholder="Enter username" />
                <span class="glyphicon glyphicon-user"></span>
            </div>       
            <div class="form-group">
                <input type="password" name="password" id="password" required class="form-control" placeholder="Enter password" />
                <span class="glyphicon glyphicon-lock"></span>
            </div>

            <button type="submit" name="go" class="btn btn-primary btn-block">Register Now</button>

            <a href="/login">Login</a>
        </form>
    </section>
</section>
